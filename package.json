{
	"name": "pageres",
	"version": "8.1.0",
	"description": "Capture website screenshots",
	"license": "MIT",
	"repository": "sindresorhus/pageres",
	"funding": "https://github.com/sponsors/sindresorhus",
	"author": {
		"name": "Sindre Sorhus",
		"email": "sindresorhus@gmail.com",
		"url": "https://sindresorhus.com"
	},
	"type": "module",
	"exports": {
		"types": "./dist/index.d.ts",
		"default": "./dist/index.js"
	},
	"sideEffects": false,
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"test": "xo && tsc --noEmit && nyc ava --timeout=2m",
		"release": "np",
		"build": "del-cli dist && tsc",
		"prepare": "npm run build"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"page",
		"website",
		"site",
		"web",
		"url",
		"resolution",
		"size",
		"screenshot",
		"screenshots",
		"screengrab",
		"screen",
		"snapshot",
		"shot",
		"responsive",
		"gulpfriendly",
		"puppeteer",
		"chrome",
		"image",
		"svg",
		"render",
		"html",
		"headless",
		"capture",
		"pic",
		"picture",
		"png",
		"jpg",
		"jpeg"
	],
	"dependencies": {
		"array-differ": "^4.0.0",
		"array-uniq": "^3.0.0",
		"capture-website": "^5.0.0",
		"date-fns": "^4.1.0",
		"filenamify": "^6.0.0",
		"filenamify-url": "^3.1.0",
		"lodash": "^4.17.21",
		"log-symbols": "^7.0.1",
		"make-dir": "^5.0.0",
		"p-map": "^7.0.3",
		"p-memoize": "^8.0.0",
		"plur": "^5.1.0",
		"type-fest": "^4.41.0",
		"unused-filename": "^4.0.1",
		"viewport-list": "^5.1.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^8.0.1",
		"@types/cookie": "^1.0.0",
		"@types/lodash": "^4.17.20",
		"@types/node": "^24.3.1",
		"@types/png.js": "^0.2.3",
		"@types/sinon": "^17.0.4",
		"@types/viewport-list": "^5.1.3",
		"ava": "^6.4.1",
		"cookie": "^1.0.2",
		"del-cli": "^6.0.0",
		"file-type": "^21.0.0",
		"get-port": "^7.1.0",
		"image-dimensions": "^2.5.0",
		"nyc": "^17.1.0",
		"path-exists": "^5.0.0",
		"pify": "^6.1.0",
		"png.js": "^0.2.1",
		"sinon": "^21.0.0",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"xo": "^1.2.2"
	},
	"ava": {
		"workerThreads": false,
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--import=tsx/esm"
		]
	},
	"xo": {
		"rules": {
			"no-await-in-loop": "off",
			"@typescript-eslint/no-unused-vars": "off",
			"@typescript-eslint/no-unsafe-assignment": "off",
			"@typescript-eslint/no-unsafe-return": "off",
			"@typescript-eslint/no-unsafe-call": "off",
			"unicorn/prefer-event-target": "off",
			"n/file-extension-in-import": "off",
			"@typescript-eslint/no-unsafe-argument": "off"
		}
	},
	"nyc": {
		"reporter": [
			"text",
			"lcov"
		],
		"extension": [
			".ts"
		]
	}
}
